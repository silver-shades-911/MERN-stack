<% layout("./layouts/layout.ejs") -%>

<div class="container flex-grow-1" id="signup-main-box">
  <div
    class="row row-cols-1 row-cols-md-2 align-items-center justify-content-center"
    id="signup-main-row"
  >
    <div class="col col-md-5 signup-img-col section">
      <div id="signup-background-img"></div>
    </div>
    <div class="col col-md-7 form-col">
      <div class="text-center col-md-10">
        <h4 id="signup-heading">Get Started Now</h4>
      </div>
      <form
        action="/users/signup"
        method="POST"
        class="needs-validation"
        enctype="multipart/form-data"
        novalidate
        id="formContent"
      >
        <div class="col-12 col-md-10">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
            placeholder="Enter your username"
          />
          <div class="valid-feedback">Keep unique username.</div>
          <div class="invalid-feedback">This username is already exits.</div>
        </div>
        <div class="col-12 col-md-10">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            placeholder="Enter your email"
          />
          <div class="form-text">
            We'll never share your email with anyone else.
          </div>
          <div class="invalid-feedback">
            Please enter valid email or this email already exists.
          </div>
        </div>
        <div class="col-12 col-md-10">
          <label for="profilePicture" class="form-label">Profile Picture</label>
          <input
            type="file"
            class="form-control"
            id="profilePicture"
            placeholder="Choose your picture"
            name="profilePicture"
            required
          />
          <div class="valid-feedback">
            Keep clear looking face profile picture.
          </div>
          <div class="invalid-feedback">Please select profile picture.</div>
        </div>
        <div class="col-12 col-md-10">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            placeholder="Create strong password"
            name="password"
            required
          />
          <div class="valid-feedback">Keep strong password.</div>
          <div class="invalid-feedback">Please enter strong password.</div>
        </div>
        <div class="col-12 text-center col-md-10">
          <button type="submit" class="btn signup-btn">Signup</button>
        </div>
        <div class="col-12 text-center link-text col-md-10">
          <p>Already have account ? <a href="/users/login">Login</a></p>
        </div>
      </form>
    </div>
  </div>
</div>
